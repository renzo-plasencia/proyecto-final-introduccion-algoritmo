package proyecto_inmuebles;

import java.awt.BorderLayout;
import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import javax.swing.JLabel;
import javax.swing.JOptionPane;

import java.awt.Font;
import javax.swing.JButton;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;
import javax.swing.JTextField;
import javax.swing.JComboBox;
import javax.swing.DefaultComboBoxModel;

public class ConsultarTerreno extends JFrame {

	private JPanel contentPane;
	private JTextField txtAncho;
	private JComboBox cboModelo;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					ConsultarTerreno frame = new ConsultarTerreno();
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public ConsultarTerreno() {
		setTitle("Consultar Terrenos");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 530, 350);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(contentPane);
		contentPane.setLayout(null);
		
		JLabel lblNewLabel = new JLabel("Consulta de Terrenos");
		lblNewLabel.setFont(new Font("Tahoma", Font.BOLD, 18));
		lblNewLabel.setBounds(10, 11, 309, 22);
		contentPane.add(lblNewLabel);
		
		
		JButton btnCancelar = new JButton("Cancelar");
		btnCancelar.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				cerrar();
			}
		});
		btnCancelar.setBounds(400, 79, 89, 23);
		contentPane.add(btnCancelar);
		
		JLabel lblModelo = new JLabel("\u00C1rea");
		lblModelo.setFont(new Font("Tahoma", Font.PLAIN, 14));
		lblModelo.setBounds(22, 57, 89, 22);
		contentPane.add(lblModelo);
		
		JLabel lblAncho = new JLabel("Ancho");
		lblAncho.setFont(new Font("Tahoma", Font.PLAIN, 14));
		lblAncho.setBounds(22, 178, 89, 22);
		contentPane.add(lblAncho);
		
		cboModelo = new JComboBox();
		cboModelo.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				double largo,ancho;
				int modelo;
				modelo = cboModelo.getSelectedIndex();
				
				switch(modelo) {
					case 0:
						largo = Tienda.largo0;
						ancho = Tienda.ancho0;
						break;
					case 1:
						largo = Tienda.largo1;
						ancho = Tienda.ancho1;
						break;
					case 2:
						largo = Tienda.largo2;
						ancho = Tienda.ancho2;
						break;
					default:
						largo = 0;
						ancho = 0;
						break;
				}
				
				txtAncho.setText(String.valueOf(ancho));
				txtLargo.setText(String.valueOf(largo));			
			}
		});
		cboModelo.setModel(new DefaultComboBoxModel(new String[] {Tienda.modelo0, Tienda.modelo1, Tienda.modelo2}));
		cboModelo.setBounds(113, 57, 218, 23);
		contentPane.add(cboModelo);
		
		JLabel lblAncho_1 = new JLabel("Largo");
		lblAncho_1.setFont(new Font("Tahoma", Font.PLAIN, 14));
		lblAncho_1.setBounds(22, 211, 89, 22);
		contentPane.add(lblAncho_1);
		
		txtAncho = new JTextField();
		txtAncho.setColumns(10);
		txtAncho.setBounds(103, 95, 216, 20);
		contentPane.add(txtAncho);
		
		JButton btnGuardar = new JButton("Guardar");
		btnGuardar.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				double largo,ancho;
				int modeloAnterior;
				String modeloNuevo;
				
				int respuesta;
				
				respuesta = JOptionPane.showConfirmDialog(null, "¿Desea guardar los datos modificados?", "Guardar",JOptionPane.OK_OPTION,JOptionPane.CANCEL_OPTION);
				
				if (respuesta == 0) {
				
					largo =  Double.parseDouble(txtLargo.getText());
					ancho =  Double.parseDouble(txtAncho.getText());
					
					modeloNuevo = nombreNuevaArea(largo,ancho);
					
					// Comprobaciones
					
					modeloAnterior = cboModelo.getSelectedIndex();
					
					switch(modeloAnterior) {
						case 0:
							Tienda.modelo0 = modeloNuevo;
							Tienda.largo0 = largo;
							Tienda.ancho0 = ancho;
							break;
						case 1:
							Tienda.modelo1 = modeloNuevo;
							Tienda.largo1 = largo;
							Tienda.ancho1 = ancho;
							break;
						case 2:
							Tienda.modelo2 = modeloNuevo;
							Tienda.largo2 = largo;
							Tienda.ancho2 = ancho;
							break;
						default:
							modeloNuevo = "";
							largo = 0.0;
							ancho = 0.0;
							break;
					}
					dispose();
				}
			}
		});
		btnGuardar.setBounds(400, 45, 89, 23);
		contentPane.add(btnGuardar);
		
		cboModelo.setSelectedIndex(0);
		
		JLabel lblAncho_1_1 = new JLabel("Ubicaci\u00F3n");
		lblAncho_1_1.setFont(new Font("Tahoma", Font.PLAIN, 14));
		lblAncho_1_1.setBounds(10, 126, 89, 22);
		contentPane.add(lblAncho_1_1);
		
		JLabel lblAncho_2 = new JLabel("Distrito");
		lblAncho_2.setFont(new Font("Tahoma", Font.PLAIN, 14));
		lblAncho_2.setBounds(10, 92, 89, 22);
		contentPane.add(lblAncho_2);
		
		JLabel lblAncho_2_1 = new JLabel("Precio");
		lblAncho_2_1.setFont(new Font("Tahoma", Font.PLAIN, 14));
		lblAncho_2_1.setBounds(24, 254, 89, 22);
		contentPane.add(lblAncho_2_1);
	}
	
	
	/*
	 * MÉTODOS 
	 */
	void cerrar() {
		int respuesta;
		respuesta = JOptionPane.showConfirmDialog(null, "¿Desea cancelar la modificación?", "Cancelar",JOptionPane.OK_OPTION,JOptionPane.CANCEL_OPTION);
		
		if (respuesta == 0) {
			dispose();
		}
	}
	
	double calcularArea(double largo, double ancho) {
		return largo * ancho;
	}
	
	String nombreNuevaArea(double largo, double ancho) {
		double nuevaArea;
		nuevaArea = calcularArea(largo, ancho);
		
		return (nuevaArea + " metros²");
	}
}
