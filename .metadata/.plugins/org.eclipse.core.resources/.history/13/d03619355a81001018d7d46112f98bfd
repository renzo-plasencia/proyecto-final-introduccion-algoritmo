package proyecto_inmuebles;

import java.awt.BorderLayout;
import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import javax.swing.JLabel;
import javax.swing.JOptionPane;

import java.awt.Font;
import javax.swing.JButton;
import java.awt.event.ActionListener;
import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;
import java.awt.event.ActionEvent;
import javax.swing.JTextField;
import javax.swing.JComboBox;
import javax.swing.DefaultComboBoxModel;
import javax.swing.JTextArea;
import javax.swing.JScrollPane;

public class ListarTerrenos extends JFrame {

	private JPanel contentPane;
	private JTextArea txtS;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					ListarTerrenos frame = new ListarTerrenos();
					frame.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public ListarTerrenos() {
		setTitle("Consultar Terrenos");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 468, 377);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(contentPane);
		contentPane.setLayout(null);
		
		JLabel lblNewLabel = new JLabel("Lista de Terrenos");
		lblNewLabel.setFont(new Font("Tahoma", Font.BOLD, 18));
		lblNewLabel.setBounds(10, 11, 309, 22);
		contentPane.add(lblNewLabel);
		
		
		JButton btnCancelar = new JButton("Cancelar");
		btnCancelar.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				cerrar();
			}
		});
		btnCancelar.setBounds(130, 304, 89, 23);
		contentPane.add(btnCancelar);
		
		JScrollPane scrollPane = new JScrollPane();
		scrollPane.setBounds(10, 44, 432, 249);
		contentPane.add(scrollPane);
		
		txtS = new JTextArea();
		scrollPane.setViewportView(txtS);
		
		JButton btnListar = new JButton("Listar");
		btnListar.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				listar();
			}
		});
		btnListar.setBounds(229, 304, 89, 23);
		contentPane.add(btnListar);
	}
	
	
	/*
	 * MÉTODOS 
	 */
	void cerrar() {
		int respuesta;
		respuesta = JOptionPane.showConfirmDialog(null, "¿Desea cancelar la modificación?", "Cancelar",JOptionPane.OK_OPTION,JOptionPane.CANCEL_OPTION);
		
		if (respuesta == 0) {
			dispose();
		}
	}
	
	double calcularPrecio(double precioM2,double factor,double ancho, double largo) {
		return ((ancho*largo)*precioM2)*factor;
	}
	
	void listar() {
		double valorFactor;
		limpiar();
		// Nombre de terrenos
		String[] terrenos = {Tienda.modelo0,Tienda.modelo1,Tienda.modelo2};
		List<String> listaTerrenos = Arrays.asList(terrenos);
		// Anchos
		Double[] anchos = {Tienda.ancho0,Tienda.ancho1,Tienda.ancho2};
		List<Double> listaAnchos = Arrays.asList(anchos);
		// Altos
		Double[] largo = {Tienda.largo0,Tienda.largo1,Tienda.largo2};
		List<Double> listaLargos = Arrays.asList(largo);
		
		imprimir("Descripción de los terrenos");
		// Imprimir caracteristicas del terreno
		for (int i=0; i < listaTerrenos.size();i++) {
			imprimir("Nombre: "+ listaTerrenos.get(i));
			imprimir("Alto: "+ listaLargos.get(i));
			imprimir("Ancho: "+ listaAnchos.get(i));
			imprimir();
		}
		// Distritos disponibles
		// Distritos
		Double[] distritos = {Tienda.distrito0,Tienda.distrito1,Tienda.distrito2};
		List<Double> listaDistritos = Arrays.asList(distritos);
		// Factor
		Double[] factor = {Tienda.calle,Tienda.parque,Tienda.esquina};
		List<Double> listaFactores = Arrays.asList(distritos);
		imprimir("Precio de los terrenos por metro cuadrado");
		for (int i=0; i < listaDistritos.size();i++) {
			int contador = 0;
			for (int j=0; j < listaFactores.size();j++) {
				valorFactor = listaDistritos.get(i)*listaFactores.get(j);
				
				switch(contador){
					case 0:
						imprimir("Distrito" + (i+1) + " en calle: S/." + valorFactor);
						break;
					case 1:
						imprimir("Distrito" + (i+1) + " en parque: S/."+valorFactor);
						break;
					case 2:
						imprimir("Distrito" + (i+1) + " en esquina: S/."+valorFactor);
						break;
				}
				contador++;
			}
			imprimir();
		}
		
	}
	
	void imprimir(String cadena) {
		txtS.append(cadena+"\n");
	}
	void imprimir() {
		txtS.append("\n");
	}
	void limpiar() {
		txtS.setText("");
	}
}
